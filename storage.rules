rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to the 3D models folder, so the viewer can
    // list and download models without requiring user authentication.
    match /modelos3d/{allPaths=**} {
      allow read;
    }

    // For all other files in the storage, require authentication for any read or write.
    // This maintains the security of other potential user-uploaded files.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
